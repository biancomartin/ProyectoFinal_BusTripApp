<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <style name="Etiquetas">
        <item name="android:background">@drawable/smu_os_ui_components_ic_plus</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="BaseBottomButton">
        <item name="android:background">@drawable/container_location</item>
        <item name="android:backgroundTint">@drawable/btn_background_selector</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="BaseAlertDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/ButtonStyleButtonsAlertDialog</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonStyleButtonsAlertDialog</item>
        <item name="android:textColor">@color/btn_base_bottom_selector_disabled</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="ButtonStyleAlertDialog" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="ButtonStyleButtonsAlertDialog" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/btn_base_bottom_selector_disabled</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
